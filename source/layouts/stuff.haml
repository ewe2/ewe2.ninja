!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "penguin home", :name => "description"}/
    %meta{:content => "ewe2", :name => "author"}/
    %link{:href => "/favicon.ico", :rel => "icon"}/
    %title ewe2.ninja
    / font links last
    / Bootstrap core CSS
    %link{:href => "/css/bootstrap.min.css", :rel => "stylesheet"}/
    / Custom styles for this template
    %link{:href => "/css/stuff.css", :media => "screen", :rel => "stylesheet"}/
    / Highlighting 
    %link{:href => "/css/rouge.css", :media => "screen", :rel => "stylesheet"}/
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      <script src="/js/html5shiv.min.js"></script>
      <script src="/js/respond.min.js"></script>
  %body
    #wrapper
      %nav.navbar.navbar-default.navbar-static-top{:role => "navigation", :style => "margin-bottom: 0"}
        .navbar-header
          %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.masthead-brand{:href => "index.html"}  ewe2.ninja
        %ul.nav.navbar-top-links.navbar-right
          =nav_link_to "home", "/index.html"
          =nav_link_to "stuff", "/stuff.html"
          =nav_link_to "about", "/about.html"
        .navbar-default.sidebar{:role => 'navigation'}
          .sidebar-nav.navbar-collapse
            %ul#side-menu.nav
              =nav_link_to "music", "/music.html"
              =nav_link_to "computers", "/computers.html"
              =nav_link_to "random", "/random.html"
      #page-wrapper
        .row
          .col-lg-12
            = yield
      /
        Bootstrap core JavaScript
        \==================================================
      / Placed at the end of the document so the pages load faster
      %script{:src => "/js/webfont.js"}
      %script{:src => "/js/dofont.js"}
      %script{:src => "/js/jquery.min.js"}
      %script{:src => "/js/bootstrap.min.js"}
      %script{:src => "/js/modernizr-latest.js"}
      / IE10 viewport hack for Surface/desktop Windows 8 bug
      %script{:src => "/js/ie10-viewport-bug-workaround.js"}
